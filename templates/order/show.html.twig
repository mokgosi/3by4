{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Test Kit</th>
                <td>{{ order.kit.name }}</td>
            </tr>
            <tr>
                <th>Patient Name</th>
                <td>{{ order.patient.firstName }} {{ order.patient.lastName }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ order.kit.price }}</td>
            </tr>
            <tr>
                <th>Paid</th>
                <td>{{ order.paid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Date ordered</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('order_index') }}" class="btn btn-outline-dark mt-auto">back to list</a>

    <a href="{{ path('order_edit', {'id': order.id}) }}" class="btn btn-secondary mt-auto">Edit</a>

    {{ include('order/_delete_form.html.twig') }}
{% endblock %}
